#!/usr/bin/env node

var commander = require('commander');
require('colorful').colorful();
var spm = require('..');

commander.usage('[options] family/name[@version]');

commander
  .option('-s, --source [name]', 'default value will be the first source')
  .option('-v, --verbose', 'show more log')
  .option('-q, --quiet', 'show less log')
  .option('--no-color', 'disable colorful print');


commander.on('--help', function() {
  console.log();
  console.log('  ' + 'Examples:'.to.bold.blue);
  console.log();
  console.log('   $', 'spm info'.to.magenta.color, 'jquery');
  console.log('   $', 'spm info'.to.magenta.color, 'arale/class');
  console.log('   $', 'spm info'.to.magenta.color, 'arale/class@stable');
  console.log('   $', 'spm info'.to.magenta.color, 'arale/class@1.0.0');
  console.log();
});

commander.parse(process.argv);

if (!commander.args[0]) {
  process.stdout.write(commander.helpInformation());
  commander.emit('--help');
  process.exit();
}

// run install
console.log();
spm.info({
  source: commander.source,
  query: commander.args[0],
  quiet: commander.quiet,
  verbose: commander.verbose
});
